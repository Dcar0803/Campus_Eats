<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnBreakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="showBreakfastMenu" />

    <Button
        android:id="@+id/btnLunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:layout_below="@id/btnBreakfast"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="showLunchMenu" />

    <Button
        android:id="@+id/btnDinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:layout_below="@id/btnLunch"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="showDinnerMenu" />

</RelativeLayout>